<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.edutechnologic.projectmaximo.DashboardSettingsActivity">


    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--<TextView-->
            <!--android:id="@+id/introTextView2"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:textSize="25dp"-->
            <!--android:text="@string/introduction_pane"-->
            <!--android:gravity="center"-->
            <!--android:textColor="#000000"/>-->

        <TextView
            android:id="@+id/dashboard_settings_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="17dp"
            android:text="@string/dashboard_settings_header"
            android:textSize="25sp"
            android:textStyle="bold|italic" />


        <CheckBox
            android:id="@+id/inboxCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:padding="10sp"
            android:layout_marginLeft="15dp"
            android:text="@string/inbox"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="92dp" />

        <CheckBox
            android:id="@+id/bulletinCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:padding="10sp"
            android:layout_marginLeft="15dp"
            android:text="@string/bulletin_board"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="92dp" />

        <CheckBox
            android:id="@+id/gaugeCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:padding="10sp"
            android:layout_marginLeft="15dp"
            android:text="@string/sensor_gauge"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="92dp" />

        <CheckBox
            android:id="@+id/statusWindowCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:padding="10sp"
            android:layout_marginLeft="15dp"
            android:text="@string/status_window"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="92dp" />

        <CheckBox
            android:id="@+id/workOrdersCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:padding="10sp"
            android:layout_marginLeft="15dp"
            android:text="@string/work_orders"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="92dp" />

        <Button
            android:id="@+id/SaveDashboardSettingBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/save"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal"
            tools:layout_editor_absoluteX="70dp"
            tools:layout_editor_absoluteY="190dp" />

    </LinearLayout>

    <!-- Bottom navbar -->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1.8">
        <include layout="@layout/bottom_menu_bar"/>
    </RelativeLayout>




</android.support.constraint.ConstraintLayout>
