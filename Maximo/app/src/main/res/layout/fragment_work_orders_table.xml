<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/workOrdersHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/work_orders"
            android:textSize="25sp"
            android:gravity="center"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:textColor="@color/forest"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/woScrollUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Up"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:textColor="@color/colorPrimary"/>

        <TextView
            android:id="@+id/woScrollDown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Down"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:textColor="@color/colorPrimary"/>
    </LinearLayout>

    <TableLayout
        android:id="@+id/workOrdersTableHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/workOrderNumber"
                android:background="@drawable/border2"
                android:layout_weight="1"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:text="@string/work_order"
                android:gravity="center"
                android:textColor="@color/forest" />

            <TextView
                android:id="@+id/workOrderDescription"
                android:background="@drawable/border2"
                android:layout_weight="1"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:text="@string/description"
                android:gravity="center"
                android:textColor="@color/forest" />

            <TextView
                android:id="@+id/workOrderAssetNumber"
                android:background="@drawable/border2"
                android:layout_weight="1"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:text="@string/asset"
                android:gravity="center"
                android:textColor="@color/forest" />

            <TextView
                android:id="@+id/workOrderLocation"
                android:background="@drawable/border2"
                android:layout_weight="1"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:text="@string/location"
                android:gravity="center"
                android:textColor="@color/forest" />

            <TextView
                android:id="@+id/workOrderReportedDate"
                android:background="@drawable/border2"
                android:layout_weight="1"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:text="@string/reported_date"
                android:gravity="center"
                android:textColor="@color/forest" />

            <TextView
                android:id="@+id/workOrderStatus"
                android:background="@drawable/border2"
                android:layout_weight="1"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:text="@string/status"
                android:gravity="center"
                android:textColor="@color/forest" />
        </TableRow>

    </TableLayout>

    <ScrollView
        android:id="@+id/workOrdersScrollView"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:scrollbars="none"
        android:layout_weight="1">

        <TableLayout
            android:id="@+id/workOrdersTable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TableLayout>

    </ScrollView>

</LinearLayout>